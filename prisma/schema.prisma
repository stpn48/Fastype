generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RaceStatus {
  waiting
  closed
  completed
}

enum RaceType {
  public
  private
  solo
}

// basic data like name, email, avatar are in clerk, here is the stats for this user
model User {
  id          String          @id @default(uuid())
  clerkId     String          @unique
  firstName   String
  lastName    String
  imageUrl    String?
  username    String
  country     String          @default("unknown")
  stats       Stats?
  Race        Race?           @relation(fields: [raceId], references: [id])
  raceId      String?
  raceHistory CompletedRace[]
}

model Stats {
  id                String @id @default(uuid())
  avgWpmLast10Races Int    @default(0)
  avgWpmAllTime     Int    @default(0)
  lastRaceWpm       Int    @default(0)
  bestRaceWpm       Int    @default(0)
  User              User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String @unique
}

model Race {
  id        String     @id @default(uuid())
  users     User[]
  avgWpm    Int
  authorId  String?
  updatedAt DateTime   @default(now())
  type      RaceType   @default(public)
  status    RaceStatus @default(waiting)
  createdAt DateTime   @default(now())
  text      String
}

model RaceText {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  text      String
}

model CompletedRace {
  id        String   @id @default(uuid())
  wpm       Int
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?
}
