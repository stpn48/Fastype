generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RaceStatus {
  open
  closed
}

// basic data like name, email, avatar are in clerk, here is the stats for this user
model User {
  id                String          @id @default(uuid())
  clerkId           String          @unique
  raceHistory       CompletedRace[]
  avgWpmLast10Races Int             @default(0)
  avgWpmAllTime     Int             @default(0)
  lastRaceWpm       Int             @default(0)
  bestRaceWpm       Int             @default(0)
  country           String          @default("unknown")
  raceId            String?
  Race              Race?           @relation(fields: [raceId], references: [id])
  raceProgress      Int             @default(0)
}

model Race {
  id            String          @id @default(uuid())
  users         User[]
  avgWpm        Int
  status        RaceStatus      @default(open)
  createdAt     DateTime        @default(now())
  text          String
  CompletedRace CompletedRace[]
}

model CompletedRace {
  id     String  @id @default(uuid())
  race   Race    @relation(fields: [raceId], references: [id])
  raceId String
  wpm    Int
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
