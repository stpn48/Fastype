generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RaceStatus {
  waiting
  closed
  completed
}

// basic data like name, email, avatar are in clerk, here is the stats for this user
model User {
  id          String          @id @default(uuid())
  clerkId     String          @unique
  firstName   String
  lastName    String
  imageUrl    String?
  username    String
  country     String          @default("unknown")
  stats       Stats           @relation(fields: [statsId], references: [id])
  statsId     String
  Race        Race?           @relation(fields: [raceId], references: [id])
  raceId      String?
  raceHistory CompletedRace[]
}

model Stats {
  id                String @id @default(uuid())
  avgWpmLast10Races Int    @default(0)
  avgWpmAllTime     Int    @default(0)
  lastRaceWpm       Int    @default(0)
  bestRaceWpm       Int    @default(0)
  User              User[]
}

model Race {
  id            String          @id @default(uuid())
  users         User[]
  avgWpm        Int
  status        RaceStatus      @default(waiting)
  createdAt     DateTime        @default(now())
  text          String
  CompletedRace CompletedRace[]
}

model CompletedRace {
  id     String  @id @default(uuid())
  race   Race    @relation(fields: [raceId], references: [id])
  raceId String
  wpm    Int
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
